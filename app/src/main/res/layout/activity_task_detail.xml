<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_dog"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_tv"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="120dp"
                android:textSize="26sp"
                android:textColor="@color/colorBlueDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black" />

            <TextView
                android:id="@+id/p_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="120dp"
                android:text="发布于浙江" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_place"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="120dp"
            android:textSize="15sp"
            android:text="任务地点" />
        <Button
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_alignLeft="@+id/tv_place"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="120dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_btn2"
            android:text="set location"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="160dp"
        android:textSize="15sp"
        android:text="任务详情：去华师一村喂养小猫" />
    <TextView
        android:id="@+id/tv_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:textSize="15sp"
        android:text="获得奖励：50乐于助人币奖励" />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="240dp"
        android:textSize="15sp"
        android:text="耗时" />
    <TextView
        android:id="@+id/tv_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="280dp"
        android:textSize="15sp"
        android:text="优先级" />
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="320dp"
        android:textSize="15sp"
        android:text="标签" />
    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="360dp"
        android:textSize="15sp"
        android:text="任务要求：每天一次，尽量在10点-12点钟
进行，并和小猫咪玩半小时，如有意外状况
请及时联系我" />
    <Button
        android:id="@+id/btn_map"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/tv_detail"
        android:layout_marginBottom="-80dp"
        android:layout_marginLeft="150dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_btn2"
        android:text="path planning"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="60dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_btn2"
            android:text="Contact publisher"
            />
        <Button
            android:id="@+id/btn_get"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/bg_btn1"
            android:text="Receive task"
            />
    </LinearLayout>
</RelativeLayout>